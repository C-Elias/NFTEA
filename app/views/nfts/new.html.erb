<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new NFT</h3>
        <%= simple_form_for @nft do |f| %>
          <%= f.input :name, placeholder: '' %>
          <%= f.input :ext_url, label: 'Image URL', placeholder: 'http://img.co/image.png' %>
          <%= f.input :description, placeholder: '' %>
          <%= f.input :for_sale,     as: :radio_buttons %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
