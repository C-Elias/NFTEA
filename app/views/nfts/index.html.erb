<h1 id="title">All NFT's</h1>
<div class="nft-grid">
  <% @nfts.each do |nft| %>
  <div class="nft-card">
    <div class="user">
      <%= link_to user_path(nft.user) do %>
        <p> <%= nft.user.email %></p>
      <% end %>
    </div>
    <img id="nft-preview" src="<%= nft.ext_url %>"alt="">
    <div class="nft-info">
      <%= link_to nft_path(nft) do %>
        <h2><%= nft.name %></h2>
      <% end %>
      <div class="desc">
        <p><%= nft.description[0..100] %>(...)</p>
      </div>

    </div>
    <div class="bottom">
      <%= link_to 'Buy NFT', nft_path(nft), class:"btn btn-outline-secondary" %>
      <div>
        <p>‚ù§ <%= rand(0..100) %></p>
        <div class="d-flex">
          <i class="fab fa-ethereum"></i>
          <%= rand(0.1..1).round(3) %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
