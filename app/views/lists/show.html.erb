<div class="container">

  <%= link_to user_path(@list.user) do %>
    <p>< Back to <%= @list.user.name %></p>
  <% end %>
  <div class="top">
    <p id="username"><%= @list.user.name %></p>
  </div>

  <div id="created-nft-grid">
    <% @list.nfts.each do |nft| %>
    <div class="nft-card">
    <div class="user">
      <%= link_to user_path(nft.user) do %>
        <h5> <%= nft.user.name %></h5>
      <% end %>
    </div>
      <img id="nft-preview" src="<%= nft.ext_url %>"alt="">
      <div class="nft-info">
        <%= link_to nft_path(nft) do %>
          <h2><%= nft.name %></h2>
        <% end %>
      <div class="desc">
        <p><%= nft.description[0..100] %>(...)</p>
      </div>
    </div>
    <div class="bottom">
            <%= link_to 'Buy NFT', nft_path(nft), class:"btn btn-outline-secondary" %>
            <div>
              <p>‚ù§ <%= rand(0..100) %></p>
              <div class="d-flex">
                <i class="fab fa-ethereum"></i>
                <%= rand(0.1..1).round(3) %>
              </div>
            </div>
          </div>
    </div>
  <% end %>
</div>
